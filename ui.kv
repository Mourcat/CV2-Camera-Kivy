#: import from_hex kivy.utils.get_color_from_hex


<SettingsDialog>
	
	MDGridLayout:
		cols: 2
		adaptive_height: True
				
		MDLabel:
			text: 'Canny Filter:'
			pos_hint: {'center_y': .5}
					
		MDSwitch:
			id: canny_switch
			size_hint: None, None
			size: '16dp', '16dp'
			pos_hint: {'center_y': .5}


<CameraCV>
	allow_stretch: True


<InScreen>

	MDBoxLayout:
		id: main_lay
		canvas.before:
			Color:
				rgba: from_hex('#242B2F')
			Rectangle:
				size: self.size
				pos: self.pos
		orientation: 'vertical'
		opacity: 0
		spacing: '20dp'
		
		MDTopAppBar:
			title: 'AI CAMERA'
			left_action_items: [['menu', lambda x: drawer.set_state('open')]]
			right_action_items: [['dots-vertical', lambda x: root.setting_dialog()]]
					
		MDBoxLayout:
			id: camera_lay
		
		MDBoxLayout:
			id: cam_controls
			adaptive_size: True
			pos_hint: {'center_x': .5}
			padding: dp(25)
			spacing: dp(20)
			
			MDFloatingActionButton:
				id: face_btn
				icon: 'face-recognition'
				pos_hint: {'center_x': .3, 'center_y': .66}
				on_release:
					face_btn.md_bg_color = 'pink' if root.cvCam.isFaceDetecting == False else app.theme_cls.primary_color
					root.cvCam.isFaceDetecting = True if root.cvCam.isFaceDetecting == False else False
					
			MDFloatingActionButton:
				icon: 'camera'
				md_bg_color: app.theme_cls.accent_color
				pos_hint: {'center_x': .5, 'center_y': .5}
				on_release:
					root.cvCam.take_pic()
					
			MDFloatingActionButton:
				id: canny_btn
				icon: 'square-rounded-outline'
				pos_hint: {'center_x': .7, 'center_y': .66}
				on_release:
					canny_btn.md_bg_color = 'pink' if root.cvCam.isCanny == False else app.theme_cls.primary_color
					root.cvCam.isCanny = True if root.cvCam.isCanny == False else False


	MDNavigationLayout:
		
		MDNavigationDrawer:
			id: drawer